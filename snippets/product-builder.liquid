                        <h4 class="picker-pack__title">{{ pack.title }}</h4>
                        <span class="picker-pack__subtitle">{{ 'tabs.products_picker.ingredient_pack_from' | t }}</span>
                      </div>
                      <span class="picker-pack__price">
                        <span class="money">{{ pack_price | money }}</span>
                      </span>
                    </div>
